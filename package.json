{
  "name": "wav-surfer",
  "productName": "wav-surfer",
  "version": "0.0.2",
  "main": "src/index.js",
  "description": "app to musicmatter.com.br",
  "author": {
    "name": "Fuerza Studio",
    "email": "contact@fuerzastudio.com",
    "url": "https://fuerzastudio.com"
  },
  "scripts": {
    "start": "concurrently \"electron-forge start\" \"npm:svelte-dev\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-w": "electron-forge make --platform=win32 --arch=x64",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public"
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./public/icons/icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "noMsi": true,
            "name": "wav-surfer",
            "certificateFile": "./cert.pfx",
            "certificatePassword": "04290429"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "dataurl": "^0.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "ffmpeg-static": "^4.1.1",
    "fluent-ffmpeg": "^2.1.2",
    "fs": "^0.0.1-security",
    "postcss": "^7.0.27",
    "postcss-load-config": "^2.1.0",
    "sirv-cli": "^0.4.4",
    "svelte-preprocess": "^3.7.1",
    "tailwindcss": "^1.3.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "concurrently": "^5.1.0",
    "electron": "8.2.4",
    "rollup": "^1.32.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.19.1"
  }
}
